{
  "name": "playdamnit-api",
  "version": "1.0.50",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "docker:build": "docker build -t playdamnit-api .",
    "docker:run": "docker run -p 3030:3030 playdamnit-api",
    "docker:push": "docker push playdamnit-api",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build",
    "docker:compose:down": "docker-compose down",
    "docker:compose:seed": "docker-compose --profile seed run seed",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:compose:dev:restart": "bun run docker:compose:dev:down && bun run docker:compose:dev",
    "docker:db:backup": "docker cp playdamnit-api:/app/data/games.db ./games.db.backup",
    "docker:db:restore": "docker cp ./games.db.backup playdamnit-api:/app/data/games.db",
    "db:pg:generate": "bun drizzle-kit generate --config=drizzle.postgres.config.ts",
    "db:pg:generate:authschema": "bunx @better-auth/cli@latest generate --config ./src/lib/auth.ts --output ./db/postgres/schema.ts --y",
    "db:pg:migrate": "bun drizzle-kit migrate --config=drizzle.postgres.config.ts",
    "db:pg:studio": "bun drizzle-kit studio --config=drizzle.postgres.config.ts",
    "db:sqlite:generate": "bun drizzle-kit generate --config=drizzle.sqlite.config.ts",
    "db:sqlite:migrate": "bun drizzle-kit migrate --config=drizzle.sqlite.config.ts",
    "db:sqlite:studio": "bun drizzle-kit studio --config=drizzle.sqlite.config.ts",
    "db:sqlite:seed": "bun run src/db/seed.ts",
    "orval:generate": "orval"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.1",
    "@elysiajs/swagger": "^1.3.0",
    "@libsql/client": "^0.15.8",
    "@sentry/bun": "^9.24.0",
    "ai": "^4.3.16",
    "axios": "^1.9.0",
    "better-auth": "^1.2.8",
    "drizzle-orm": "^0.44.1",
    "elysia": "1.3.3",
    "ioredis": "^5.6.1",
    "openai": "^5.0.1",
    "pg": "^8.16.0",
    "resend": "^4.5.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.43",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "bun-types": "1.2.15",
    "drizzle-kit": "^0.31.1",
    "@types/bun": "^1.2.15",
    "orval": "^7.9.0",
    "prettier": "^3.5.3"
  }
}
